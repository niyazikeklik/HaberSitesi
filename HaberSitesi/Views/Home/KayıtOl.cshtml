@model ErrorResult
<div class="contact">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="contact-form">
                    <form asp-controller="Home">
                        <div class="form-group">
                            <input type="text" name="UserID" class="form-control" placeholder="Kullanıcı Adı" />
                        </div>
                        <div class="form-group">
                           <input type="password" name="Pass" class="form-control" placeholder="Şifre" />
                        </div>
                        <div class="row">
                            <div><button asp-action="Kaydol" class="btn btn-success" style="margin-right: 10px;" type="submit">Kayıt Ol</button></div>
                        </div>
                    </form>
                    <label> @Model?.Message </label>
                </div>
            </div>
        </div>
    </div>
</div>